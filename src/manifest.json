{
  "manifest_version": 2,
  "name": "Unit4 Business World UI Fixer",
  "version": "1.3",
  "description": "Implements quality of life improvements for the Unit4 Business World ERP system.",
  "icons": {
    "48": "icons/schedule_x48.png"
  },
  "content_scripts": [
    {
      "all_frames": true,
      "run_at": "document_start",
      "matches": [
        "*://*/UBW/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "options_ui": {
    "page": "options.html"
  },
  "permissions": ["storage"]
}